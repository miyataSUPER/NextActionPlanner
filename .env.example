# Gemini API設定
GEMINI_API_KEY=your_api_key_here

# アプリケーション設定
DEBUG=false
LOG_LEVEL=INFO

# ファイル制限設定（バイト単位）
MAX_VIDEO_SIZE=104857600  # 100MB
MAX_TEXT_LENGTH=30000

# Whisper設定
WHISPER_MODEL=base  # base, small, medium, large
LANGUAGE=ja

# データベース設定
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=action_db
DB_HOST=db
DB_PORT=5432
